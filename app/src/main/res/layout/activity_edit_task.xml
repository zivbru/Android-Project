<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#5fb0c9"
    tools:context=".main"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name:   "
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <EditText
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/taskName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Date:"
            android:layout_weight="1" />
        <com.example.zivbru.myfamilycalanderfinal.DateEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/targetDate"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description: "
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_weight="1" />
        <EditText
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/taskDescription"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Related Event:"
            android:layout_width="109dp"
            android:layout_height="67dp"
            android:layout_weight="1" />
        <EditText
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/relatedEvent"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Owner:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/task_save"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="SAVE"
            android:background="#108c48"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/task_cancel"
        android:background="#f4b012"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px" />

    <Button
        android:id="@+id/task_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:background="#fb5133"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

</LinearLayout>
</LinearLayout>
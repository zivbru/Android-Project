<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.zivbru.myfamilycalanderapp.NewEventActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:weightSum="2">


    <ImageView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/event"
        android:layout_marginRight="50px"
        android:layout_weight="0.63" />

    <EditText android:id="@+id/group_event_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Event name"
        android:layout_weight="0.31" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.example.zivbru.myfamilycalanderfinal.DateEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Start Date"
            android:id="@+id/group_event_start_date"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.example.zivbru.myfamilycalanderfinal.DateEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="End Date"
            android:id="@+id/group_event_end_date"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/group_event_description"
        />




    <Button
        android:id="@+id/choose_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Pick Group event"
        android:background="#fb5133" />

    <Button
        android:id="@+id/add_group_event_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Add event"
        android:background="#f4b012" />


</LinearLayout>

